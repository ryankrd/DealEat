@using DealEat.WebApp.Models.AccountViewModels

@model RegisterViewModel

@{
    ViewData[ "Title" ] = "Créer un nouveau compte commerçant";
}

<div class="container">
    <h2 class="my-4">@ViewData["Title"]</h2>

    <form asp-controller="Account" asp-action="RegisterMerchant" method="post">
        @if (!ViewContext.ViewData.ModelState.IsValid)
        {
            <div asp-validation-summary="All" class="alert alert-danger"></div>
        }

        <div class="form-group">
            <label asp-for="Name">Prenom : </label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName">Nom : </label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName"></span>
        </div>

        <div class="form-group">
            <label asp-for="Pseudo">Pseudo : </label>
            <input asp-for="Pseudo" class="form-control" />
            <span asp-validation-for="Pseudo"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email">E-mail : </label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>

        <div class="form-group">
            <label asp-for="Telephone">Tel : </label>
            <input asp-for="Telephone" class="form-control" />
            <span asp-validation-for="Telephone"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Mot de passe : </label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password"></span>
        </div>


        <div class="form-group">
            <label asp-for="ConfirmPassword">Répétez le mot de passe : </label>
            <input asp-for="ConfirmPassword" class="form-control" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>

        <button type="submit" class="btn btn-primary btn-block">S'enregistrer</button>
    </form>
</div>